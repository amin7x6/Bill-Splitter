<div class="container">
  <!-- <div class="row"> -->
    <div class="col-md-offset-2 col-md-8 col-sm-6 col-xs-6">
  <h1 class="text-center bcolor">Welcome to Bill Splitter</h1><br>
  <hr>
  <%= form_tag bill_splitter_path do%>
    <%= label_tag :amount %>
    <div class="input-group">
      <span class="input-group-addon">$</span>
      <%= text_field_tag :amount, nil, class: "form-control" %>
    </div><br>

    <%= label_tag :tax %>
    <div class="input-group">
      <span class="input-group-addon">%</span>
      <%= text_field_tag :tax, nil, class: "form-control" %>
    </div><br>

    <%= label_tag :tip %>
    <div class="input-group">
      <span class="input-group-addon">%</span>
      <%= text_field_tag :tip, nil, class: "form-control" %>
    </div><br>

    <%= label_tag :number %>
    <div class="input-group">
      <span class="input-group-addon">Num</span>
      <%= text_field_tag :number, nil, class: "form-control" %>
    </div>
    <br>
  <%# will generates a submit button for the form with label 'Contact Us' %>
  <div>
    <%= submit_tag :Submit, class: 'btn btn-primary'%>
  </div>

  <% end %>
</div>
 </div>
 <div class="container">
   <div class="col-md-offset-2 col-md-8">
 <% if params[:result]%>
   <h3>Every Person Must Pay </h3><span class="res"><%= params[:result] %></span>
 <% end %>
</div>
</div>
